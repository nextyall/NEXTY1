{
  "name": "WhatsApp 2X Bot",
  "description": "Team-ready WhatsApp bot with Heroku Deploy Button",
  "repository": "https://github.com/YOUR_USERNAME/YOUR_REPO",
  "logo": "https://telegra.ph/file/64c4e67f38e76dcabead8.jpg",
  "keywords": ["whatsapp","bot","nodejs","heroku","2x-plan","team"],
  "buildpacks": [
    { "url": "heroku/nodejs" },
    { "url": "https://github.com/jontewks/puppeteer-heroku-buildpack" }
  ],
  "env": {
    "SESSION_ID": {
      "description": "Paste your session ID from the generator site",
      "value": "",
      "required": true
    },
    "NODE_ENV": {
      "description": "Environment type",
      "value": "production",
      "required": true
    },
    "PUPPETEER_EXECUTABLE_PATH": {
      "description": "Path to Chromium provided by Heroku buildpack",
      "value": "/app/.apt/usr/bin/chromium-browser",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-2x"
    }
  }
}
